<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LondonSightseensApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cardview_dark_background</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pale_apricot</item>
        <item name="colorSecondaryVariant">@color/pale_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LondonSightseensApp.Splash">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="BottomSheetHeader" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:textColor">@color/textDarkPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_header_bottom_sheet</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:paddingStart">@dimen/padding_8dp</item>
        <item name="android:paddingEnd">@dimen/padding_8dp</item>
    </style>

    <style name="BottomSheetLine" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@color/textDarkDisabled</item>
        <item name="android:layout_marginTop">@dimen/margin_4dp</item>
        <item name="android:layout_width">@dimen/layout_width_bottom_sheet</item>
        <item name="android:layout_height">@dimen/layout_height_bottom_sheet</item>
    </style>

    <style name="BottomSheetDescription" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:textSize">@dimen/text_size_explanation_bottom_sheet</item>
        <item name="android:paddingStart">@dimen/padding_8dp</item>
        <item name="android:paddingEnd">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/textDarkSecondary</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/cardview_dark_background</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemRippleColor">@color/cardview_dark_background</item>
        <item name="itemTextColor">@color/white</item>
    </style>
</resources>